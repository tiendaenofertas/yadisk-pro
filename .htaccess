# Proteger archivos PHP
<FilesMatch "getVideoUrl\.php">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Permitir solo peticiones AJAX a getVideoUrl.php
<FilesMatch "getVideoUrl\.php">
    SetEnvIf X-Requested-With XMLHttpRequest ajax
    Order Deny,Allow
    Deny from all
    Allow from env=ajax
</FilesMatch>

# Deshabilitar listado de directorios
Options -Indexes

# Bloquear acceso a archivos de configuraci√≥n
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>
